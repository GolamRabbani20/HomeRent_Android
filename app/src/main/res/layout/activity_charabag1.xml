<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6BC2B"
    android:orientation="vertical"
    tools:context=".Charabag1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryDark"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bd1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bd2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facilities:\nWell ventilated,Well security,\nGas,Water supply,Electricity\navailable and Attached washroom."
            android:textSize="20dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:textColor="#020202"/>

        <Button
            android:id="@+id/Contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:background="#FFFFFF"/>

    </LinearLayout>


</LinearLayout>